services:
  apache:
    build: ./core/
    container_name: apache_<NOME_APP>
    depends_on:
      - mysql
      - redis
      - kafka
    volumes:
      - ../_data/logs/:/var/log/
      - ../_data/upload/:/var/www/<NOME_APP>/site/public_html/assets/upload/
      - ../site/public_html/:/var/www/<NOME_APP>/site/public_html/
      - ../site/app/:/var/www/<NOME_APP>/site/app/
      - ../site/cgi-bin/:/var/www/<NOME_APP>/site/cgi-bin/
      - ../migrations/:/var/www/<NOME_APP>/migrations/
    ports:
      - "80:80"
    networks:
      <NOME_APP>:
        ipv4_address: 172.29.0.3

  # ===== DATA LAYER =====
  mysql:
    image: mysql:8.0
    container_name: mysql_<NOME_APP>
    restart: always
    command: --sql_mode=""
    environment:
      - MYSQL_ROOT_PASSWORD=<SENHA_ROOT>
      - MYSQL_DATABASE=mysql_<NOME_APP>
      - MYSQL_USER=user_<NOME_APP>
      - MYSQL_PASSWORD=<SENHA_DB>
    volumes:
      - ../_data/mysql-data/:/var/lib/mysql
    ports:
      - "3306:3306"
    expose:
      - "3306"
    networks:
      <NOME_APP>:
        ipv4_address: 172.29.0.2

  # ===== CACHE LAYER =====
  redis:
    image: redis:7.2-alpine
    container_name: redis_<NOME_APP>
    restart: always
    command: >
      redis-server 
      --maxmemory 256mb 
      --maxmemory-policy allkeys-lru
      --save 60 1000
      --appendonly yes
    volumes:
      - ../_data/redis-data/:/data
    ports:
      - "6379:6379"
    expose:
      - "6379"
    networks:
      <NOME_APP>:
        ipv4_address: 172.29.0.4
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 10s
      timeout: 3s
      retries: 3

  # ===== MESSAGE BROKER LAYER =====
  kafka:
    image: apache/kafka:latest
    container_name: kafka_<NOME_APP>
    restart: always
    environment:
      KAFKA_NODE_ID: 1
      KAFKA_PROCESS_ROLES: broker,controller
      KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:9092
      KAFKA_CONTROLLER_LISTENER_NAMES: CONTROLLER
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT
      KAFKA_CONTROLLER_QUORUM_VOTERS: 1@kafka:9093
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS: 0
      KAFKA_NUM_PARTITIONS: 3
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: "true"
      CLUSTER_ID: "MkU3OEVBNTcwNTJENDM2Qk"
    volumes:
      - ../_data/kafka-data/:/var/lib/kafka/data
    ports:
      - "9092:9092"
      - "9093:9093"
    expose:
      - "9092"
      - "9093"
    networks:
      <NOME_APP>:
        ipv4_address: 172.29.0.5
    healthcheck:
      test:
        [
          "CMD-SHELL",
          "/opt/kafka/bin/kafka-broker-api-versions.sh --bootstrap-server localhost:9092 || exit 1",
        ]
      interval: 10s
      timeout: 10s
      retries: 5
      start_period: 30s

  # ===== MONITORING =====
  kafka_ui:
    image: provectuslabs/kafka-ui:latest
    container_name: kafka_ui_<NOME_APP>
    restart: always
    depends_on:
      - kafka
    environment:
      KAFKA_CLUSTERS_0_NAME: <NOME_APP>_cluster
      KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS: kafka:9092
      DYNAMIC_CONFIG_ENABLED: "true"
    ports:
      - "8080:8080"
    networks:
      <NOME_APP>:
        ipv4_address: 172.29.0.6

networks:
  <NOME_APP>:
    ipam:
      driver: default
      config:
        - subnet: 172.29.0.0/16
